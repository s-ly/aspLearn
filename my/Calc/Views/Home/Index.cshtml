@* @model string *@
@model Calc.Models.CalcData
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Калькулятор</title>
    <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
    <div>
        <h1>Калькулятор</h1>
        <h3>Привет @Model.Str</h3>
    </div>
    <form asp-action="Submit" method="post">
        <div asp-validation-summary="All"></div>
        <div>
            <label>Имя</label>
            <input asp-for="Str">
        </div>
        <div>
            <label>Введите X</label>
            <input asp-for="X">
        </div>
        <div>
            <label>Введите Y</label>
            <input asp-for="Y">
        </div>
        <div>
            <label>Выбор действия</label>
            <select asp-for="Action">
                <option value="">Выберите действие</option>
                <option value="+">+ Сложить</option>
                <option value="-">- Вычесть</option>
                <option value="*">* Умножить</option>
                <option value="/">/ Разделить</option>
            </select>
        </div>
        <button type="submit">submit</button>
    </form>
    <div>
        <h3>Ответ: @Model.Answer</h3>
    </div>
</body>

</html>